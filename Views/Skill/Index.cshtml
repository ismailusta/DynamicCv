@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@using DynamicCv.Models.Entity
@model List<TblSkill>
@{
    string renk = "";
}
@{
    string labelRenk = "";
}
<!DOCTYPE html>
<html>
<body class="hold-transition sidebar-mini">
    <div class="wrapper">
        <!-- Navbar -->
        <!-- Main content -->
        <section class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-12">
                        <div class="card">
                            <div class="card-header">
                                <h3 class="card-title">My Skill List</h3>
                            </div>
                            <!-- /.card-header -->
                            <div class="card-body">
                                <a href="/Skill/AddSkill/" class="btn btn-primary">Add Skill</a>
                                <br />
                                <br />
                                <table class="table table-bordered">
                                    <thead>
                                        <tr>
                                            <th style="width: 10px">#</th>
                                            <th>Task</th>
                                            <th>Progress</th>
                                            <th style="width: 40px">Rate</th>
                                            <th>Delete</th>
                                            <th>Edit</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach(var x in Model)
                                        {
                                            if(x.Progress>=0 && x.Progress <= 50)
                                            {
                                                renk = "progress-bar bg-danger";
                                                labelRenk = "badge bg-danger";
                                            }
                                            if (x.Progress >= 51 && x.Progress <= 70)
                                            {
                                                renk = "progress-bar bg-warning";
                                                labelRenk = "badge bg-warning";
                                            }
                                            if (x.Progress >= 71 && x.Progress <= 84)
                                            {
                                                renk = "progress-bar bg-primary";
                                                labelRenk = "badge bg-primary";
                                            }
                                            if (x.Progress >= 85 && x.Progress <= 100)
                                            {
                                                renk = "progress-bar bg-success";
                                                labelRenk = "badge bg-success";
                                            }

                                            <tr>
                                                <td>@x.Id.</td>
                                                <td>@x.Skill</td>
                                                <td>
                                                    <div class="progress progress-xs">
                                                        <div class="@renk" style="width:@x.Progress%"></div>
                                                    </div>
                                                </td>
                                                <td><span class="@labelRenk">@x.Progress%</span></td>
                                                <td><a href="/Skill/DeleteSkill/@x.Id" class="btn btn-danger btn-sm">
                                                    <i class="fas fa-trash"></i>
                                                    Delete</a>
                                                </td>
                                                <td><a href="/Skill/EditSkill/@x.Id" class="btn btn-info btn-sm">
                                                    <i class="fas fa-pencil-alt"></i>
                                                    Edit
                                                    </a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        <!-- /.card -->
                    </div>
                </div>
            </div><!-- /.container-fluid -->
        </section>
        <!-- /.content -->
    </div>
</body>
</html>