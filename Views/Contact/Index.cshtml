@using DynamicCv.Models.Entity
@model List<TblContact>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!DOCTYPE html>
<html>
<body class="hold-transition sidebar-mini">
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <!-- /.col -->
                <div class="col-md-12">
                    <div class="card">

                        <div class="card-body">
                                <div class="tab-pane" id="timeline">
                                    <!-- The timeline -->
                                    <div class="timeline timeline-inverse">
                                    @foreach(var x in Model)
                                    {
                                    <!-- timeline time label -->
                                        <div class="time-label">
                                            <span class="bg-info">
                                                @x.Date 
                                            </span>
                                        </div>
                                        <div>
                                            <i class="fas fa-comments bg-warning"></i>
                                            <div class="timeline-item">
                                                <span class="time"> <i class="far fa-user-circle"> </i>@x.Email</span>
                                                <h3 class="timeline-header">
                                                    <p>@x.Namesurname</p>
                                                    <strong>Subject:</strong> <span style="font-weight: bold;">@x.Subject</span>
                                                </h3>
                                                <div class="timeline-body">
                                                    @x.Message
                                                </div>
                                            </div>
                                        </div>
                                    }
                                    </div>
                                </div>
                            </div>
                        </div><!-- /.card-body -->
                    </div>
                </div>
            </div>
    </section>
</body>
</html>