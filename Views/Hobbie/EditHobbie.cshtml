@{
    ViewBag.Title = "EditHobbie";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@using DynamicCv.Models.Entity
@model TblHobby
<br />
<h4>Edit Hobby Page</h4>
<br />
<form method="post">
    @Html.Label("Experiment Title")
    @Html.TextBoxFor(x => x.Description1, new { @class = "form-control" })
    <br />
    @Html.Label("Experiment SubTitle")
    @Html.TextBoxFor(x => x.Description2, new { @class = "form-control" })
    <br />
    <a href="/Hobbie/Index" class="btn btn-secondary ms-2">
        <i class="bi bi-arrow-left-circle"></i> Go Back
    </a>
    <br />
    <br />
    <button class="btn-info">Update</button>
