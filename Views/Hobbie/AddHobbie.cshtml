@{
    ViewBag.Title = "AddHobbie";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h4 class="text-primary"><i class="bi bi-plus-circle"></i> Adding New Hobby Page</h4>
<br />

<form method="post">
    <label>Description 1</label>
    <input type="text" name="Description1" class="form-control" placeholder="Hobby title or short description..." />
    <br />

    <label>Description 2</label>
    <input type="text" name="Description2" class="form-control" placeholder="If you want add information..." />
    <br />

    <a href="/Hobbie/Index" class="btn btn-secondary ms-2">
        <i class="bi bi-arrow-left-circle"></i> Go Back
    </a>

    <button type="submit" class="btn btn-success">
        <i class="bi bi-check-circle"></i> Save
    </button>

</form>

