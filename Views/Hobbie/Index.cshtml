@using DynamicCv.Models.Entity
@model List<TblHobby>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<!-- Bootstrap CSS (eğer layout'ta yoksa) -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
<!-- Bootstrap Icons -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />

<div class="container my-5">
    <h2 class="text-center mb-4 text-primary">My Hobby List</h2>

    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        @foreach (var hobby in Model)
        {
            <div class="col">
                <div class="card h-100 shadow-sm border-primary">
                    <div class="card-body d-flex flex-column justify-content-between">
                        <div>
                            <h5 class="card-title text-dark fw-bold">Hobby #@hobby.Id</h5>
                            @if (!string.IsNullOrWhiteSpace(hobby.Description1))
                            {
                                <p class="card-text text-muted">@hobby.Description1</p>
                            }
                            @if (!string.IsNullOrWhiteSpace(hobby.Description2))
                            {
                                <p class="card-text text-muted">@hobby.Description2</p>
                            }
                        </div>
                        <div class="mt-3 d-flex justify-content-between">
                            <a href="/Hobbie/EditHobbie/@hobby.Id", new { id = hobby.Id })" class="btn btn-sm btn-outline-primary">
                                <i class="bi bi-pencil-square"></i> Edit
                            </a>
                            <a href="/Hobbie/DeleteHobbie/@hobby.Id" , new { id=hobby.Id })" class="btn btn-sm btn-outline-danger";">
                                <i class="bi bi-trash"></i> Delete
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    <div class="text-center mt-5">
        <a href="/Hobbie/AddHobbie/" class="btn btn-success btn-lg">
            <i class="bi bi-plus-circle"></i> Add New Hobby
        </a>
    </div>
</div>

